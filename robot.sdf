<?xml version="1.0" ?>
<sdf version="1.6">
  <model name="burger_minimal_camera">

    <!-- ================= base_footprint ================= -->
    <link name="base_footprint"/>

    <!-- ================= base_link ================= -->
    <link name="base_link">
      <pose>-0.032 0 0.070 0 0 0</pose>

      <inertial>
        <mass>0.825735</mass>
        <inertia>
          <ixx>0.72397393</ixx>
          <iyy>0.72397393</iyy>
          <izz>0.653050163</izz>
        </inertia>
      </inertial>

      <collision name="base_collision">
        <geometry>
          <box><size>0.140 0.140 0.140</size></box>
        </geometry>
      </collision>

      <visual name="base_visual">
        <geometry>
          <box><size>0.140 0.140 0.140</size></box>
        </geometry>
        <material>
          <ambient>1.0 0.4 0.7 1</ambient>
          <diffuse>1.0 0.4 0.7 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- ================= LEFT WHEEL ================= -->
    <link name="wheel_left_link">
      <pose>0 0.08 0.023 0 0 0</pose>

      <inertial>
        <mass>0.0285</mass>
        <inertia>
          <ixx>0.0018</ixx>
          <iyy>0.00329</iyy>
          <izz>0.0018</izz>
        </inertia>
      </inertial>

      <collision name="wheel_left_collision">
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.033</radius>
            <length>0.018</length>
          </cylinder>
        </geometry>

        <surface>
          <friction>
            <ode>
              <mu>1.2</mu>
              <mu2>0.05</mu2>
              <fdir1>1 0 0</fdir1>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="wheel_left_visual">
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.033</radius>
            <length>0.018</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.2 0.4 1.0 1</ambient>
          <diffuse>0.2 0.4 1.0 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- ================= RIGHT WHEEL ================= -->
    <link name="wheel_right_link">
      <pose>0 -0.08 0.023 0 0 0</pose>

      <inertial>
        <mass>0.0285</mass>
        <inertia>
          <ixx>0.0018</ixx>
          <iyy>0.00329</iyy>
          <izz>0.0018</izz>
        </inertia>
      </inertial>

      <collision name="wheel_right_collision">
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.033</radius>
            <length>0.018</length>
          </cylinder>
        </geometry>

        <surface>
          <friction>
            <ode>
              <mu>1.2</mu>
              <mu2>0.05</mu2>
              <fdir1>1 0 0</fdir1>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="wheel_right_visual">
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.033</radius>
            <length>0.018</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.2 0.4 1.0 1</ambient>
          <diffuse>0.2 0.4 1.0 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- ================= CASTER ================= -->
    <link name="caster_back_link">
      <pose>-0.081 0 -0.004 0 0 0</pose>
      <collision name="collision">
        <geometry>
          <sphere><radius>0.005</radius></sphere>
        </geometry>
        <!-- ✅ 캐스터가 방향 강제하지 않게 마찰을 낮춤 -->
        <surface>
          <friction>
            <ode>
              <mu>0.01</mu>
              <mu2>0.01</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <!-- ================= CAMERA ================= -->
    <link name="camera_link">
      <pose>0.05 0 0.10 0 0.52 0</pose>

      <visual name="visual">
        <geometry><box><size>0.02 0.02 0.02</size></box></geometry>
        <material><ambient>0 1 0 1</ambient></material>
      </visual>

      <sensor name="camera_sensor" type="camera">
        <always_on>true</always_on>
        <update_rate>30</update_rate>
        <visualize>false</visualize>

        <camera>
          <horizontal_fov>1.3962634</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.05</near>
            <far>10.0</far>
          </clip>
        </camera>

        <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
          <camera_name>camera</camera_name>
          <frame_name>camera_link</frame_name>
        </plugin>
      </sensor>
    </link>

    <!-- ================= JOINTS ================= -->
    <joint name="base_joint" type="fixed">
      <parent>base_footprint</parent>
      <child>base_link</child>
    </joint>

    <joint name="wheel_left_joint" type="revolute">
      <parent>base_link</parent>
      <child>wheel_left_link</child>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>

    <joint name="wheel_right_joint" type="revolute">
      <parent>base_link</parent>
      <child>wheel_right_link</child>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>

    <joint name="caster_back_joint" type="ball">
      <parent>base_link</parent>
      <child>caster_back_link</child>
    </joint>

    <joint name="camera_joint" type="fixed">
      <parent>base_link</parent>
      <child>camera_link</child>
    </joint>

    <!-- ================= DIFF DRIVE ================= -->
    <plugin name="diff_drive" filename="libgazebo_ros_diff_drive.so">
      <left_joint>wheel_left_joint</left_joint>
      <right_joint>wheel_right_joint</right_joint>
      <wheel_separation>0.160</wheel_separation>
      <wheel_diameter>0.066</wheel_diameter>
      <command_topic>cmd_vel</command_topic>
      <robot_base_frame>base_footprint</robot_base_frame>
      <odometry_frame>odom</odometry_frame>
      <update_rate>30</update_rate>
    </plugin>

  </model>
</sdf>
